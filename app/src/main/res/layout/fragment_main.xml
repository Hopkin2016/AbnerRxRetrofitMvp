        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="click4"
        android:id="@+id/btn_demo4"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_margin_50"
        android:id="@+id/tv_demo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
